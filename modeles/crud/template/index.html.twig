{% extends 'layout/layout-back-office-crud.html.twig' %}

{% block title %}{{ __TITLE_INDEX_TRANS__ }}{% endblock %}

{% block inner_crud_body %}

    {% include 'back/components/partials/crud-fixed-header.html.twig' with {
        'title_page': __TITLE_INDEX_TRANS__,
        'add_button': absolute_url(path('__PATH_NEW__')),
        breadcrumb: {
            'type': 'back',
            'items': [
                __TITLE_INDEX_TRANS__
            ]
        }
    } %}
    <div class="crud-content">
        <table class="table">
            <thead>
            <tr>
                __ENTITY_PROPERTY_INDEX__
{#                ACTIONS BELLOW#}
                <th>{{ 'page.admin.crud.global.action.label'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for __ENTITY__ in __PAGINATION_ENTITIES__ %}
                <tr>
                    __ENTITY_VALUE_INDEX__
                    <td>
                        {% include 'back/components/partials/crud-action-td.html.twig' with {
                            'see_button': absolute_url(path('__PATH_SHOW__', {'id': __ENTITY.id__})),
                            'edit_button': absolute_url(path('__PATH_EDIT__', {'id': __ENTITY.id__})),
                            'delete_partial': {
                                'partial': '__DELETE_FORM_TWIG_PATH__',
                                'ref': __ENTITY.id__
                            }
                        } %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">{{ 'page.admin.crud.global.no_records.label'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="pagination">
            {{ knp_pagination_render(__PAGINATION_ENTITIES__) }}
        </div>
    </div>
{% endblock %}